---
import { siteConfig } from '@data/site';

const { name, footerNavigation, contactAU, contactNZ, cta, footer, navigation } = siteConfig;
const currentYear = new Date().getFullYear();
---

<!-- Footer wrapper for parallax effect -->
<div data-footer-parallax class="footer-wrap">
  <footer data-footer-parallax-inner class="footer" role="contentinfo">
    <div class="footer__container container">
      <!-- Links Row -->
      <div class="footer__links-row">
        <!-- Pages Column -->
        <nav class="footer__column" aria-label="Site navigation">
          <span class="footer__heading">Pages</span>
          <ul class="footer__list" role="list">
            {navigation.map((item) => (
              <li>
                <a href={item.href} class="footer__link">
                  <span class="footer__link-text">{item.label}</span>
                </a>
              </li>
            ))}
            <li>
              <a href={cta.login.href} class="footer__link">
                <span class="footer__link-text">{cta.login.label}</span>
              </a>
            </li>
          </ul>
        </nav>

        <!-- Contact Column -->
        <div class="footer__column">
          <span class="footer__heading">Contact</span>
          <ul class="footer__list" role="list">
            <li>
              <a href={`tel:${contactAU.phone.replace(/\s/g, '')}`} class="footer__link">
                <span class="footer__link-text">{contactAU.phone}</span>
              </a>
            </li>
            <li>
              <a href={`mailto:${contactAU.email}`} class="footer__link">
                <span class="footer__link-text">{contactAU.email}</span>
              </a>
            </li>
            <li>
              <a href={`tel:${contactNZ.phone.replace(/\s/g, '')}`} class="footer__link">
                <span class="footer__link-text">{contactNZ.phone} (NZ)</span>
              </a>
            </li>
          </ul>
        </div>

        <!-- Legal Column -->
        <nav class="footer__column" aria-label="Legal navigation">
          <span class="footer__heading">Legal</span>
          <ul class="footer__list" role="list">
            {footerNavigation.legal.map((item) => (
              <li>
                <a href={item.href} class="footer__link">
                  <span class="footer__link-text">{item.label}</span>
                </a>
              </li>
            ))}
          </ul>
        </nav>

      </div>

      <!-- Large Logo -->
      <div class="footer__logo-row" aria-hidden="true">
        <img
          src="/images/marshall-freeman-logo.svg"
          alt=""
          class="footer__logo"
          loading="lazy"
        />
      </div>

      <!-- Bottom Row -->
      <div class="footer__bottom">
        <p class="footer__copyright">Â© {currentYear} {name}</p>
        <p class="footer__disclaimer">{footer.disclaimer}</p>
        <p class="footer__tagline">{footer.tagline}</p>
      </div>
    </div>
  </footer>
  <!-- Dark overlay for parallax fade effect -->
  <div data-footer-parallax-dark class="footer__dark"></div>
</div>

<style>
  /* Footer wrapper for parallax */
  .footer-wrap {
    position: relative;
    z-index: 1;
    overflow: hidden;
  }

  .footer {
    position: relative;
    background: var(--color-accent);
    color: var(--color-background);
    padding-block: var(--space-section) var(--space-2xl);
  }

  .footer__dark {
    position: absolute;
    inset: 0;
    background: var(--color-accent);
    pointer-events: none;
    z-index: 2;
  }

  .footer__container {
    position: relative;
    z-index: 3;
    display: flex;
    flex-direction: column;
    gap: var(--space-3xl);
  }

  /* Links Row */
  .footer__links-row {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-xl);
    padding-bottom: var(--space-3xl);
    border-bottom: 1px solid rgba(254, 255, 243, 0.15);
  }

  @media (min-width: 480px) {
    .footer__links-row {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 768px) {
    .footer__links-row {
      grid-template-columns: repeat(3, 1fr) auto;
      gap: var(--space-2xl);
    }
  }

  @media (min-width: 1024px) {
    .footer__links-row {
      grid-template-columns: repeat(3, 1fr) auto;
      gap: var(--space-3xl);
    }
  }

  .footer__column {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .footer__heading {
    font-size: var(--text-xs);
    font-weight: var(--font-weight-medium);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: rgba(254, 255, 243, 0.4);
    margin-bottom: var(--space-xs);
  }

  .footer__list {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  /* Underline Link Animation */
  .footer__link {
    position: relative;
    display: inline-flex;
    font-size: var(--text-sm);
    color: var(--color-background);
    opacity: 0.8;
    overflow: hidden;
    transition: opacity var(--duration-fast) var(--ease-out-expo);
  }

  .footer__link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: currentColor;
    transform: translateX(-101%);
    transition: transform var(--duration-base) var(--ease-out-expo);
  }

  .footer__link:hover {
    opacity: 1;
  }

  .footer__link:hover::after {
    transform: translateX(0);
  }

  .footer__link-text {
    display: inline-block;
  }

  /* Large Logo */
  .footer__logo-row {
    padding-block: var(--space-xl);
  }

  .footer__logo {
    display: block;
    width: 100%;
    height: auto;
    opacity: 0.15;
    filter: brightness(0) invert(1);
    user-select: none;
  }

  /* Bottom Row */
  .footer__bottom {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    padding-top: var(--space-xl);
    border-top: 1px solid rgba(254, 255, 243, 0.15);
  }

  @media (min-width: 768px) {
    .footer__bottom {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      gap: var(--space-lg);
    }
  }

  .footer__copyright {
    font-size: var(--text-sm);
    opacity: 0.5;
  }

  .footer__disclaimer {
    font-size: var(--text-sm);
    opacity: 0.4;
  }

  .footer__tagline {
    font-size: var(--text-sm);
    opacity: 0.4;
  }

  @media (min-width: 768px) {
    .footer__tagline {
      text-align: right;
    }
  }
</style>
