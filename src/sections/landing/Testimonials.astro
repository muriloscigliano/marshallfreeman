---
import { landingData } from '@data/landing';

const { testimonials } = landingData;
---

<section class="testimonials" aria-labelledby="testimonials-headline">
  <div class="testimonials__container container">
    <header class="testimonials__header">
      <span class="testimonials__tagline">{testimonials.tagline}</span>
      <h2 id="testimonials-headline" class="testimonials__headline">
        {testimonials.headline}
      </h2>
    </header>

    <ul class="testimonials__list" role="list">
      {testimonials.items.map((testimonial) => (
        <li class="testimonials__item">
          <figure class="testimonials__card">
            <blockquote class="testimonials__quote">
              <p>"{testimonial.quote}"</p>
            </blockquote>
            <figcaption class="testimonials__author">
              â€” {testimonial.author}
            </figcaption>
          </figure>
        </li>
      ))}
    </ul>

    <p class="testimonials__industries">{testimonials.industries}</p>
  </div>
</section>

<style>
  .testimonials {
    padding-block: var(--space-4xl);
    background: var(--color-background);
  }

  .testimonials__header {
    text-align: center;
    margin-bottom: var(--space-3xl);
  }

  .testimonials__tagline {
    display: block;
    font-size: var(--text-sm);
    font-weight: var(--font-weight-semibold);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-muted);
    margin-bottom: var(--space-md);
  }

  .testimonials__headline {
    font-size: var(--text-4xl);
    font-weight: var(--font-weight-bold);
    letter-spacing: -0.02em;
  }

  .testimonials__list {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-lg);
    margin-bottom: var(--space-2xl);
  }

  @media (min-width: 768px) {
    .testimonials__list {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .testimonials__card {
    height: 100%;
    padding: var(--space-xl);
    background: var(--color-foreground);
    border: 1px solid var(--color-border-subtle);
    display: flex;
    flex-direction: column;
  }

  .testimonials__quote {
    flex: 1;
    margin-bottom: var(--space-lg);
  }

  .testimonials__quote p {
    font-size: var(--text-base);
    line-height: 1.7;
    color: var(--color-text);
    font-style: italic;
  }

  .testimonials__author {
    font-size: var(--text-sm);
    font-weight: var(--font-weight-medium);
    color: var(--color-text-muted);
  }

  .testimonials__industries {
    text-align: center;
    font-size: var(--text-sm);
    color: var(--color-text-subtle);
  }
</style>
