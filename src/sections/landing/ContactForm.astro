---
import { landingData } from '@data/landing';
import Button from '@components/Button.astro';

const { contactForm } = landingData;
---

<section id={contactForm.id} class="contact" aria-labelledby="contact-headline">
  <div class="contact__container container">
    <header class="contact__header">
      <h2 id="contact-headline" class="contact__headline">{contactForm.headline} <span class="contact__headline-muted">{contactForm.headlineMuted}</span></h2>
      <p class="contact__description">
        {contactForm.description}{' '}
        <a href={`tel:${contactForm.phone.replace(/\s/g, '')}`} class="contact__phone">{contactForm.phone}</a>{' '}
        {contactForm.descriptionContinued}{' '}
        <strong class="contact__emphasis">{contactForm.emphasis}</strong>{' '}
        {contactForm.descriptionEnd}
      </p>
    </header>

    <form class="contact__form" action="#" method="POST" aria-label="Contact form">
      <!-- Company Type Radio Buttons -->
      <fieldset class="contact__fieldset">
        <legend class="contact__legend">{contactForm.companyType.label}</legend>
        <div class="contact__radio-group" role="radiogroup">
          {contactForm.companyType.options.map((option, index) => (
            <label class="contact__radio-label">
              <input
                type="radio"
                name="companyType"
                value={option.value}
                class="contact__radio"
                checked={index === 0}
                required
              />
              <span class="contact__radio-custom" aria-hidden="true"></span>
              <span class="contact__radio-text">{option.label}</span>
            </label>
          ))}
        </div>
      </fieldset>

      <!-- Form Fields -->
      <div class="contact__fields">
        {contactForm.fields.map((field) => (
          <div class="contact__field">
            <label for={field.name} class="contact__label">{field.label}</label>
            <input
              type={field.type}
              id={field.name}
              name={field.name}
              class="contact__input"
              required={field.required}
              autocomplete={
                field.name === 'email' ? 'email' :
                field.name === 'phone' ? 'tel' :
                field.name === 'contactName' ? 'name' :
                field.name === 'businessName' ? 'organization' : 'off'
              }
            />
          </div>
        ))}
      </div>

      <!-- Submit Button -->
      <footer class="contact__footer">
        <Button label={contactForm.submit.label} type="submit" variant="primary" />
        <p class="contact__disclaimer">{contactForm.disclaimer}</p>
      </footer>
    </form>
  </div>
</section>

<style>
  .contact {
    padding-block: var(--space-section);
    background: var(--color-blue-900);
    color: var(--color-background);
  }

  .contact__container {
    display: flex;
    flex-direction: column;
    gap: var(--space-3xl);
  }

  .contact__header {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .contact__headline {
    font-size: var(--text-5xl);
    font-weight: var(--font-weight-medium);
    letter-spacing: -0.03em;
    line-height: 1.1;
    color: var(--color-background);
  }

  .contact__headline-muted {
    color: rgba(254, 255, 243, 0.4);
  }

  .contact__description {
    font-size: var(--text-lg);
    color: rgba(254, 255, 243, 0.8);
    line-height: 1.6;
  }

  .contact__phone {
    color: var(--color-background);
    font-weight: var(--font-weight-medium);
    text-decoration: underline;
    text-underline-offset: 3px;
    transition: opacity var(--duration-fast) var(--ease-out-expo);
  }

  .contact__phone:hover {
    opacity: 0.7;
  }

  .contact__emphasis {
    color: var(--color-yellow-900);
    font-weight: var(--font-weight-semibold);
  }

  /* Form */
  .contact__form {
    display: flex;
    flex-direction: column;
    gap: var(--space-2xl);
    max-width: 800px;
  }

  /* Fieldset */
  .contact__fieldset {
    border: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .contact__legend {
    font-size: var(--text-xs);
    font-weight: var(--font-weight-medium);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: rgba(254, 255, 243, 0.5);
  }

  .contact__radio-group {
    display: flex;
    gap: var(--space-xl);
  }

  .contact__radio-label {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    cursor: pointer;
  }

  .contact__radio {
    position: absolute;
    opacity: 0;
    width: 0;
    height: 0;
  }

  .contact__radio-custom {
    width: 20px;
    height: 20px;
    border: 2px solid rgba(254, 255, 243, 0.4);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: border-color var(--duration-fast) var(--ease-out-expo);
  }

  .contact__radio-custom::after {
    content: '';
    width: 10px;
    height: 10px;
    background: var(--color-background);
    border-radius: 50%;
    transform: scale(0);
    transition: transform var(--duration-fast) var(--ease-out-expo);
  }

  .contact__radio:checked + .contact__radio-custom {
    border-color: var(--color-background);
  }

  .contact__radio:checked + .contact__radio-custom::after {
    transform: scale(1);
  }

  .contact__radio:focus-visible + .contact__radio-custom {
    outline: 2px solid var(--color-background);
    outline-offset: 2px;
  }

  .contact__radio-text {
    font-size: var(--text-base);
    font-weight: var(--font-weight-medium);
    color: var(--color-background);
  }

  /* Fields Grid */
  .contact__fields {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-lg);
  }

  @media (min-width: 768px) {
    .contact__fields {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-xl) var(--space-2xl);
    }
  }

  .contact__field {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .contact__label {
    font-size: var(--text-xs);
    font-weight: var(--font-weight-medium);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: rgba(254, 255, 243, 0.5);
  }

  .contact__input {
    background: transparent;
    border: none;
    border-bottom: 1px solid rgba(254, 255, 243, 0.3);
    padding-block: var(--space-sm);
    font-size: var(--text-base);
    color: var(--color-background);
    transition: border-color var(--duration-fast) var(--ease-out-expo);
  }

  .contact__input::placeholder {
    color: rgba(254, 255, 243, 0.3);
  }

  .contact__input:focus {
    outline: none;
    border-color: var(--color-background);
  }

  .contact__input:focus-visible {
    border-color: var(--color-background);
  }

  /* Footer */
  .contact__footer {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: var(--space-lg);
    padding-top: var(--space-xl);
    border-top: 1px solid rgba(254, 255, 243, 0.1);
  }

  @media (min-width: 768px) {
    .contact__footer {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }
  }

  .contact__disclaimer {
    font-size: var(--text-sm);
    color: rgba(254, 255, 243, 0.5);
  }
</style>
