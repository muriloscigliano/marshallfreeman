---
import { landingData } from '@data/landing';

const { howItWorks } = landingData;
---

<section id={howItWorks.id} class="how-it-works" aria-labelledby="how-it-works-headline">
  <div class="how-it-works__container container">
    <header class="how-it-works__header">
      <span class="how-it-works__tagline">{howItWorks.tagline}</span>
      <h2 id="how-it-works-headline" class="how-it-works__headline">
        {howItWorks.headline}
      </h2>
    </header>

    <ol class="how-it-works__steps" role="list">
      {howItWorks.steps.map((step) => (
        <li class="how-it-works__step">
          <article class="how-it-works__card">
            <span class="how-it-works__number" aria-hidden="true">
              {step.number}
            </span>
            <h3 class="how-it-works__title">{step.title}</h3>
            <p class="how-it-works__description">{step.description}</p>
          </article>
        </li>
      ))}
    </ol>
  </div>
</section>

<style>
  .how-it-works {
    padding-block: var(--space-4xl);
    background: var(--color-background);
  }

  .how-it-works__header {
    text-align: center;
    margin-bottom: var(--space-3xl);
  }

  .how-it-works__tagline {
    display: block;
    font-size: var(--text-sm);
    font-weight: var(--font-weight-semibold);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-muted);
    margin-bottom: var(--space-md);
  }

  .how-it-works__headline {
    font-size: var(--text-4xl);
    font-weight: var(--font-weight-bold);
    letter-spacing: -0.02em;
    max-width: 25ch;
    margin-inline: auto;
  }

  .how-it-works__steps {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-lg);
    counter-reset: step;
  }

  @media (min-width: 640px) {
    .how-it-works__steps {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .how-it-works__steps {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .how-it-works__card {
    height: 100%;
    padding: var(--space-xl);
    background: var(--color-foreground);
    border: 1px solid var(--color-border-subtle);
    transition: border-color var(--duration-base) var(--ease-out-expo);
  }

  .how-it-works__card:hover {
    border-color: var(--color-border);
  }

  .how-it-works__number {
    display: inline-block;
    font-size: var(--text-sm);
    font-weight: var(--font-weight-bold);
    color: var(--color-accent);
    margin-bottom: var(--space-md);
  }

  .how-it-works__title {
    font-size: var(--text-lg);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--space-sm);
    line-height: 1.3;
  }

  .how-it-works__description {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    line-height: 1.6;
  }
</style>
