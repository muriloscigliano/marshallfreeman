---
import { landingData } from '@data/landing';

const { hero, trustSignals, clientLogos } = landingData;
---

<section class="hero" aria-labelledby="hero-headline">
  <div class="hero__container container">
    <header class="hero__header">
      <div class="hero__content">
        <h1 id="hero-headline" class="hero__headline" set:html={hero.headline.replace("'", "'")} />
        <p class="hero__tagline">{hero.tagline}</p>
      </div>

      <aside class="hero__aside">
        <p class="hero__description">{hero.description}</p>
      </aside>
    </header>

    <!-- Video container - placeholder for future video -->
    <div class="hero__video" aria-label="Product demo video">
      <div class="hero__video-placeholder">
        <span class="hero__video-icon" aria-hidden="true">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
            <path d="M8 5v14l11-7z"/>
          </svg>
        </span>
      </div>
    </div>

    <div class="hero__signals-wrap">
      <ul class="hero__signals" role="list" aria-label="Key benefits">
        {trustSignals.map((signal, index) => (
          <li class="hero__signal">
            <span class="hero__signal-number" aria-hidden="true">
              {String(index + 1).padStart(2, '0')}
            </span>
            <span class="hero__signal-text">{signal.text}</span>
          </li>
        ))}
      </ul>
    </div>

    <div class="hero__logos">
      <span class="hero__logos-label">{clientLogos.label}</span>
      <div class="hero__logos-marquee" aria-label="Client logos">
        <div class="hero__logos-track" data-logos-track>
          {[...clientLogos.logos, ...clientLogos.logos].map((logo) => (
            <span class="hero__logo-item">{logo.name}</span>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    min-height: 100dvh;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding-block: clamp(120px, 20vw, 160px) var(--space-2xl);
    position: relative;
    overflow: hidden;
  }

  /* Subtle gradient accent */
  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 60%;
    height: 100%;
    background: linear-gradient(
      135deg,
      transparent 0%,
      rgba(239, 244, 140, 0.08) 50%,
      transparent 100%
    );
    pointer-events: none;
  }

  .hero__container {
    display: flex;
    flex-direction: column;
    gap: var(--space-3xl);
    position: relative;
    z-index: 1;
  }

  .hero__header {
    display: flex;
    flex-direction: column;
    gap: var(--space-2xl);
  }

  @media (min-width: 1024px) {
    .hero__header {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-end;
      gap: var(--space-3xl);
    }
  }

  .hero__content {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    flex: 1.5;
    max-width: 660px;
    justify-content: flex-end;
  }

  .hero__headline {
    font-size: clamp(36px, 8vw, 110px);
    font-weight: var(--font-weight-medium);
    letter-spacing: -0.04em;
    line-height: 1.1;
  }

  /* Highlight styling for headline */
  .hero__headline :global(em),
  .hero__headline :global(strong) {
    font-style: normal;
    font-weight: inherit;
    color: var(--color-accent);
  }

  .hero__tagline {
    font-size: var(--text-xl);
    color: var(--color-text-muted);
    font-weight: var(--font-weight-regular);
    max-width: none;
  }

  .hero__aside {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
    flex: 1;
    max-width: 530px;
  }

  @media (min-width: 1024px) {
    .hero__aside {
      padding-bottom: var(--space-sm);
    }
  }

  .hero__description {
    font-size: var(--text-base);
    color: var(--color-text-muted);
    line-height: 1.7;
  }

  /* Video Container - breaks out of container */
  .hero__video {
    width: calc(100% + var(--container-padding) * 2);
    max-width: min(1500px, 100vw - var(--space-lg) * 2);
    margin-inline: calc(var(--container-padding) * -1);
    aspect-ratio: 16 / 9;
    border-radius: var(--radius-md);
    overflow: hidden;
    position: relative;
  }

  @media (min-width: 1440px) {
    .hero__video {
      width: 1500px;
      margin-inline: auto;
      margin-left: calc((100% - 1500px) / 2);
    }
  }

  .hero__video-placeholder {
    width: 100%;
    height: 100%;
    background: var(--color-blue-700);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background var(--duration-base) var(--ease-out-expo);
  }

  .hero__video-placeholder:hover {
    background: var(--color-blue-500);
  }

  .hero__video-icon {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: var(--color-yellow-900);
    color: var(--color-blue-900);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform var(--duration-base) var(--ease-out-expo);
  }

  .hero__video-placeholder:hover .hero__video-icon {
    transform: scale(1.1);
  }

  @media (min-width: 768px) {
    .hero__video-icon {
      width: 100px;
      height: 100px;
    }

    .hero__video-icon svg {
      width: 56px;
      height: 56px;
    }
  }

  /* Signals wrap - breaks out of container to match video */
  .hero__signals-wrap {
    width: calc(100% + var(--container-padding) * 2);
    max-width: min(1500px, 100vw - var(--space-lg) * 2);
    /* margin-inline: calc(var(--container-padding) * -1); */
  }

  @media (min-width: 1440px) {
    .hero__signals-wrap {
      width: 1380px;
    }
  }

  .hero__signals {
    display: grid;
    grid-template-columns: 1fr;
    border-radius: var(--radius-sm);
    border: 1px solid var(--color-border);
  }

  @media (min-width: 640px) {
    .hero__signals {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .hero__signals {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .hero__signal {
    display: flex;
    flex-direction: column;
    height: 220px;
    gap: var(--space-xs);
    padding: var(--space-lg);
    background: var(--color-background);
    border-bottom: 1px solid var(--color-border);
    border-right: 1px solid var(--color-border);
    transition: background var(--duration-base) var(--ease-out-expo);
    justify-content: space-around;
  }

  .hero__signal:last-child {
    border-bottom: none;
    border-right: none;
  }

  @media (min-width: 640px) {
    .hero__signal:nth-child(2n) {
      border-right: none;
    }
    .hero__signal:nth-last-child(-n+2) {
      border-bottom: none;
    }
  }

  @media (min-width: 1024px) {
    .hero__signal {
      border-bottom: none;
    }
    .hero__signal:nth-child(2n) {
      border-right: 1px solid var(--color-border);
    }
    .hero__signal:last-child {
      border-right: none;
    }
  }

  .hero__signal:hover {
    background: var(--color-foreground);
  }

  .hero__signal-number {
    font-size: 16px;
    font-weight: var(--font-weight-semibold);
    color: var(--color-accent);
  }

  .hero__signal-text {
    font-size: var(--text-mm);
    font-weight: var(--font-weight-medium);
    color: var(--color-text);
    line-height: 1.4;
    text-wrap: balance;
  }

  /* Client Logos Marquee */
  .hero__logos {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
    width: calc(100% + var(--container-padding) * 2);
    margin-inline: calc(var(--container-padding) * -1);
    overflow: hidden;
  }

  @media (min-width: 1440px) {
    .hero__logos {
      width: 100vw;
      margin-left: calc((100% - 100vw) / 2);
    }
  }

  .hero__logos-label {
    font-size: var(--text-xs);
    font-weight: var(--font-weight-medium);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-subtle);
    text-align: center;
  }

  .hero__logos-marquee {
    position: relative;
    overflow: hidden;
    mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
    -webkit-mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
  }

  .hero__logos-track {
    display: flex;
    gap: var(--space-3xl);
    width: max-content;
    animation: marquee 30s linear infinite;
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .hero__logo-item {
    font-size: var(--text-lg);
    font-weight: var(--font-weight-medium);
    color: var(--color-text-muted);
    white-space: nowrap;
    padding-inline: var(--space-md);
    transition: color var(--duration-base) var(--ease-out-expo);
  }

  .hero__logo-item:hover {
    color: var(--color-text);
  }
</style>
