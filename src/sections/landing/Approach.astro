---
import { landingData } from '@data/landing';

const { approach } = landingData;
---

<section class="approach" aria-labelledby="approach-headline">
  <div class="approach__container container">
    <div class="approach__content">
      <span class="approach__tagline">{approach.tagline}</span>
      <h2 id="approach-headline" class="approach__headline">
        {approach.headline}
      </h2>
      <div class="approach__text">
        {approach.paragraphs.map((paragraph) => (
          <p class="approach__paragraph">{paragraph}</p>
        ))}
      </div>
      <p class="approach__statement">{approach.statement}</p>
    </div>
  </div>
</section>

<style>
  .approach {
    padding-block: var(--space-4xl);
    background: var(--color-foreground);
  }

  .approach__content {
    max-width: 700px;
    margin-inline: auto;
    text-align: center;
  }

  .approach__tagline {
    display: block;
    font-size: var(--text-sm);
    font-weight: var(--font-weight-semibold);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-muted);
    margin-bottom: var(--space-md);
  }

  .approach__headline {
    font-size: var(--text-4xl);
    font-weight: var(--font-weight-bold);
    letter-spacing: -0.02em;
    margin-bottom: var(--space-xl);
  }

  .approach__text {
    margin-bottom: var(--space-xl);
  }

  .approach__paragraph {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    line-height: 1.7;
    margin-bottom: var(--space-md);
  }

  .approach__paragraph:last-child {
    margin-bottom: 0;
  }

  .approach__statement {
    font-size: var(--text-xl);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text);
    padding-top: var(--space-xl);
    border-top: 1px solid var(--color-border);
  }
</style>
