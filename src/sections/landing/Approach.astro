---
import { landingData } from '@data/landing';

const { approach } = landingData;
---

<section id={approach.id} class="approach" aria-labelledby="approach-headline">
  <div class="approach__container container">
    <div class="approach__layout">
      <header class="approach__header">
        <p class="approach__tagline">{approach.tagline}</p>
        <h2 id="approach-headline" class="approach__headline">{approach.headline} <span class="approach__headline-muted">{approach.headlineMuted}</span></h2>
      </header>

      <article class="approach__content">
        <div class="approach__text">
          {approach.paragraphs.map((paragraph) => (
            <p class="approach__paragraph">{paragraph}</p>
          ))}
        </div>

        <footer class="approach__footer">
          <p class="approach__statement">{approach.statement}</p>
        </footer>
      </article>
    </div>
  </div>
</section>

<style>
  .approach {
    padding-block: var(--space-section);
    background: var(--color-foreground);
  }

  .approach__layout {
    display: flex;
    flex-direction: column;
    gap: var(--space-2xl);
  }

  @media (min-width: 1024px) {
    .approach__layout {
      flex-direction: row;
      gap: var(--space-3xl);
    }
  }

  .approach__header {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  @media (min-width: 1024px) {
    .approach__header {
      flex: 1;
    }
  }

  .approach__tagline {
    font-size: var(--text-xs);
    font-weight: var(--font-weight-medium);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-subtle);
    max-width: none;
  }

  .approach__headline {
    font-size: var(--text-5xl);
    font-weight: var(--font-weight-medium);
    letter-spacing: -0.03em;
    line-height: 1.1;
  }

  .approach__headline-muted {
    color: var(--color-text-muted);
  }

  .approach__content {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    gap: var(--space-xl);
  }

  @media (min-width: 1024px) {
    .approach__content {
      flex: 1;
    }
  }

  .approach__text {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .approach__paragraph {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    line-height: 1.7;
  }

  .approach__footer {
    padding-top: var(--space-xl);
    border-top: 1px solid var(--color-border);
    position: relative;
  }

  .approach__footer::before {
    content: '';
    position: absolute;
    left: 0;
    top: -1px;
    width: 80px;
    height: 3px;
    background: var(--color-accent);
  }

  .approach__statement {
    font-size: var(--text-xl);
    font-weight: var(--font-weight-medium);
    color: var(--color-text);
    line-height: 1.4;
  }
</style>
