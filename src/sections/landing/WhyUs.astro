---
import { landingData } from '@data/landing';

const { whyUs } = landingData;
---

<section id={whyUs.id} class="why-us" aria-labelledby="why-us-headline">
  <div class="why-us__container container">
    <div class="why-us__main">
      <header class="why-us__header">
        <h2 id="why-us-headline" class="why-us__headline">{whyUs.headline} <span class="why-us__headline-muted">{whyUs.headlineMuted}</span></h2>
      </header>

      <ul class="why-us__benefits" role="list" aria-label="Key benefits">
        {whyUs.benefits.map((benefit, index) => (
          <li class="why-us__benefit">
            <span class="why-us__benefit-number" aria-hidden="true">
              {String(index + 1).padStart(2, '0')}
            </span>
            <span class="why-us__benefit-text">{benefit}</span>
          </li>
        ))}
      </ul>
    </div>

    <footer class="why-us__footer">
      <p class="why-us__statement">{whyUs.statement}</p>
      <p class="why-us__tagline">{whyUs.tagline}</p>
    </footer>
  </div>
</section>

<style>
  .why-us {
    padding-block: var(--space-section);
    border-top: 1px solid var(--color-border);
  }

  .why-us__container {
    display: flex;
    flex-direction: column;
    gap: var(--space-3xl);
  }

  .why-us__main {
    display: flex;
    flex-direction: column;
    gap: var(--space-2xl);
  }

  @media (min-width: 1024px) {
    .why-us__main {
      flex-direction: row;
      gap: var(--space-3xl);
      align-items: flex-start;
    }
  }

  .why-us__header {
    flex: 1;
  }

  .why-us__headline {
    font-size: var(--text-4xl);
    font-weight: var(--font-weight-medium);
    letter-spacing: -0.03em;
  }

  .why-us__headline-muted {
    color: var(--color-text-muted);
  }

  .why-us__benefits {
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .why-us__benefit {
    display: flex;
    align-items: baseline;
    gap: var(--space-lg);
    padding-block: var(--space-md);
    border-top: 1px solid var(--color-border);
    transition: border-color var(--duration-base) var(--ease-out-expo);
  }

  .why-us__benefit:last-child {
    border-bottom: 1px solid var(--color-border);
  }

  .why-us__benefit:hover {
    border-color: var(--color-accent);
  }

  .why-us__benefit-number {
    font-size: var(--text-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--color-accent);
    flex-shrink: 0;
    min-width: 2ch;
  }

  .why-us__benefit-text {
    font-size: var(--text-base);
    color: var(--color-text);
    line-height: 1.5;
  }

  .why-us__footer {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
    padding-top: var(--space-2xl);
    border-top: 1px solid var(--color-border);
  }

  @media (min-width: 768px) {
    .why-us__footer {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      gap: var(--space-xl);
    }
  }

  .why-us__statement {
    font-size: var(--text-2xl);
    font-weight: var(--font-weight-medium);
    color: var(--color-text);
    max-width: 40ch;
  }

  .why-us__tagline {
    font-size: var(--text-sm);
    color: var(--color-text-subtle);
    max-width: none;
  }
</style>
